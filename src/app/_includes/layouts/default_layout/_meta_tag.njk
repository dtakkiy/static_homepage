{# 各ページで指定している場合はそちらを優先、指定していない場合は下のデフォルトファイルから読み込みます #}
{# /src/app/_data/default_meta_tags.json #}
<title>{{ title if title else default_meta_tags.title }}</title>

<meta name=    "description"         content="{{ description if description else default_meta_tags.description }}" />
<meta name=    "twitter:title"       content="{{ title if title else default_meta_tags.title }}" />
<meta name=    "twitter:url"         content="{{ url if url else default_meta_tags.url }}" />
<meta name=    "twitter:card"        content="{{ twitter_card if twitter_card else default_meta_tags.twitter_card }}" />
<meta name=    "twitter:image"       content="{{ ogp_image if ogp_image else default_meta_tags.ogp_image }}" />
<meta name=    "twitter:description" content="{{ description if description else default_meta_tags.description }}" />
<meta property="og:title"            content="{{ title if title else default_meta_tags.title }}" />
<meta property="og:url"              content="{{ url if url else default_meta_tags.url }}" />
<meta property="og:site_name"        content="{{ site_name if site_name else default_meta_tags.site_name }}" />
<meta property="og:image"            content="{{ ogp_image if ogp_image else default_meta_tags.ogp_image }}" />
<meta property="og:description"      content="{{ description if description else default_meta_tags.description }}" />
<meta property="og:type"             content="{{ ogp_type if ogp_type else default_meta_tags.ogp_type }}" />
<meta property="og:locale"           content="{{ ogp_locale if ogp_locale else default_meta_tags.ogp_locale }}" />
<meta name=    "robots"              content="{{ robots if robots else default_meta_tags.robots }}" />
<link rel=     "canonical"           href=   "{{ url if url else default_meta_tags.url }}" />
